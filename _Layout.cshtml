<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Điện thoại rẻ Thanh Hóa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Remove duplicate jQuery scripts -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <style type="text/css">
        body {
            background-color: #F0F0F0;
        }

        .navbar-inverse {
            background-color: #39B54A;
            border-color: #39B54A;
        }

        .top_header {
            background-color: black;
            color: white;
            padding: 10px;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: large;
        }

        .navbar-brand {
            color: cadetblue;
        }

        .spnoibat {
            background-color: white;
        }

            .spnoibat h3 {
                padding-left: 30px;
            }

        .giohang {
            color: white;
        }
    </style>
</head>

<body>
    @{
        var user = Session["use"] as Ictshop.Models.Nguoidung;
    }

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="top_header col-md-12">
            <div class="row">
                <div class="col-sm-4 col-md-4" style="font-size:large">IctShop</div>

                <div class="col-sm-4 col-md-4 text-center">
                    @Html.Action("GioHangPartial", "GioHang")
                </div>

                <div class="col-sm-4 col-md-4 text-right">
                    @if (user != null)
                    {
                        <a style="color:white" href="@Url.Action("Profile", "User", new { id = user.MaNguoiDung })"> Xin chào: @user.Email</a>
                        @Html.Raw("&nbsp;")
                        <a style="color:red" href="@Url.Action("DangXuat", "User")"> Đăng Xuất</a>
                    }
                    else
                    {
                        <a style="color:white" href="@Url.Action("Dangky", "User")"> Đăng Ký</a>
                        @Html.Raw("&nbsp;")
                        <a style="color:white" href="@Url.Action("Dangnhap", "User")"> Đăng Nhập</a>
                    }
                </div>
            </div>
        </div>

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="navbar-brand" src="~/HinhanhSP/logo1.jpg" width="50" height="50" style="padding:0" />
                @Html.ActionLink("DiDong36", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Sanpham", new { category = "dienthoai" })" title="dienthoai">ĐIỆN THOẠI</a></li>
                    <li><a href="@Url.Action("Index", "Sanpham", new { category = "laptop" })" title="LAPTOP">LAPTOP</a></li>
                    <li><a href="@Url.Action("Index", "Sanpham", new { category = "phukien" })" title="PHUKIEN">PHỤ KIỆN</a></li>
                    <li><a href="@Url.Action("Contact", "Home")" title="LIENHE">LIÊN HỆ</a></li>
                    <li><a class="nav-link" href="@Url.Action("Index", "DonHangs")" style="color:white">ĐƠN HÀNG</a></li>
                </ul>
            </div>
        </div>
    </div>

    <br>
    <div class="container body-content" style="margin-top: 70px;">
        @RenderBody()
        <hr />
        <div>
            <img class="img-responsive" src="~/HinhanhSP/ban2.jpg" alt="Banner" />
        </div>
        <br />
    </div>

    <footer class="bg-info" style="padding-left:50px">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <h2>Bảo hành</h2>
                <span>Chính sách mua hàng</span><br />
                <span>Chính sách bảo hành</span><br />
                <span>Trung tâm bảo hành</span><br />
                <span>Tra cứu bảo hành</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Liên kết</h2>
                <span>Tin tức Mobile</span><br />
                <span>Lập trình Web</span><br />
                <span>GenkVN</span><br />
                <span>Dân trí</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Thông tin</h2>
                <span>Về chúng tôi</span><br />
                <span>Liên hệ</span><br />
                <span>Góp ý</span><br />
                <span>Tra cứu</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Theo dõi</h2>
                <span>Kênh youtube</span><br />
                <span>Fanpage</span><br />
                <span>Shopee</span><br />
                <span>Group</span>
            </div>
        </div>
        <hr />
        <center><p class="bg-primary">&copy; @DateTime.Now.Year - IctShop</p></center>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap.min.js"></script> <!-- Ensure Bootstrap JS is included -->
    @RenderSection("scripts", required: false)
</body>
</html>
