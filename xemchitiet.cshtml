@using Ictshop.Models
@model Sanpham


@{
    ViewBag.Title = "xemchitiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    /* Container and Rows */
.container {
    padding: 20px;
    margin: auto;
    margin-top:2rem;
    font-family: Arial, sans-serif;
}

.row {
    display: flex;
    flex-wrap: wrap;
    margin: 20px 0;
}

.col-md-6 {
    flex: 50%;
    max-width: 50%;
    padding: 15px;
}

.card-body {
    padding: 20px;
    background: #f9f9f9;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

    .card-img-top {
        max-width: 600px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

.card-title {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
}

.card-text {
    font-size: 16px;
    color: #666;
    margin-bottom: 10px;
}
</style>
<body>
    <div>
        <h2>CHI TIẾT SẢN PHẨM</h2>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="@Url.Content(Model.Anhbia)" class="card-img-top" alt="Product Image">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(model => model.Tensp)</h5>
                        <p class="card-text">Hãng sản xuất: @Html.DisplayFor(model => model.Hangsanxuat)</p>
                        <p class="card-text">Thẻ nhớ: @Html.DisplayFor(model => model.Thesim)</p>
                        <p class="card-text">Bộ nhớ trong: @Html.DisplayFor(model => model.Bonhotrong)</p>
                        <p class="card-text">Ram: @Html.DisplayFor(model => model.Ram)</p>
                        <p class="card-text">Mô tả: @Html.DisplayFor(model => model.Mota)</p>
                        <p class="card-text"> Giá: @String.Format("{0:0,0} đ", Model.Giatien) </p>
                        @if (Model.Masp != null)
                        {
                    <a href="/GioHang/ThemGioHang/@Model.Masp" class="icon-link">
                        <button type="submit" class="btn-login">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span class="sr-only">Thêm vào giỏ hàng</span>
                        </button>
                    </a>
                                    <a href="/GioHang/ThemGioHang/@Model.Masp" class="icon-link">
                                        <button type="submit" class="btn-default">
                                            <i class="fa-solid fa-cart-shopping"></i>
                                            <span class="sr-only">Mua ngay</span>
                                        </button>
                                    </a> }
                                else
                                {
                    <p>Error: Product ID is null.</p>}
                    </div>
                </div>
            </div>
        </div>
</body>