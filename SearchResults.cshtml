@model IEnumerable<Ictshop.Models.Sanpham>

@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kết quả tìm kiếm cho '@ViewBag.SearchQuery'</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("XemChiTiet", "Sanpham", new { masp = item.Masp })">
                            @item.Tensp
                        </a>
                    </td>
                    <td>@String.Format("{0:0,0}", item.Giatien) VND</td>
                    <td>
                        <a href="@Url.Action("XemChiTiet", "Sanpham", new { masp = item.Masp })">Xem chi tiết</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Không tìm thấy sản phẩm.</td>
            </tr>
        }
    </tbody>
</table>
